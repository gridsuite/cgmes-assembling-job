<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger - %msg%n
            </pattern>
        </encoder>
    </appender>
    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>

    <!--
        suppress unreadable huge logs or unnecessary logs...
    -->
    <logger name="com.datastax.driver.core" level="warn"/>
    <logger name="org.gridsuite.cgmes.assembling.job.SftpConnection$AcquiredInMemoryDestFile" level="warn"/>


</configuration>
